---
import Layout from "../layouts/Layout.astro"
import ModalAddJet from "../components/modalAddJet.astro"
import TableModal from "../components/table/TableModal.astro"

const response = await fetch('http://localhost:3001/airships');
const airship = await response.json();
const deleteUrl = 'http://localhost:3001/airship';

// Definir los encabezados con claves que coincidan con las propiedades de los objetos 'jets'
const headers = [
	{ label: "Name", key: "title" },
	{ label: "Status", key: "status" },
	{ label: "Price", key: "pricepermiles" },
	{ label: "seats", key: "seats" },
	{ label: "size", key: "size" },
	//   { label: "image", key: "image" },
]
---

<Layout title="Airships">
	<div class="flex flex-col space-y-4">
		<div>
			<ModalAddJet />
		</div>
		<div>
			<TableModal headers={headers} rows={airship} url{deleteUrl} />
		</div>
	</div>
</Layout>
