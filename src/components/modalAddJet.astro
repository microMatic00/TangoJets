---

<button
	id="addJetButton"
	class="block text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
	type="button"
>
	Add Airship
</button>

<!-- Add Jet Modal -->
<div
	id="addJetModal"
	tabindex="-1"
	aria-hidden="true"
	class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full backdrop-filter backdrop-blur-sm bg-opacity-50"
>
	<div class="relative w-full max-w-2xl max-h-full">
		<!-- Modal content -->
		<div class="relative bg-white rounded-lg shadow dark:bg-gray-800">
			<!-- Modal header -->
			<div
				class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600"
			>
				<h3 class="text-xl font-semibold text-gray-900 dark:text-white">
					Add New Airship
				</h3>
				<button
					type="button"
					class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white"
					data-modal-hide="addJetModal"
				>
					<svg
						aria-hidden="true"
						class="w-5 h-5"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
						><path
							fill-rule="evenodd"
							d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414 1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
							clip-rule="evenodd"></path></svg
					>
					<span class="sr-only">Close modal</span>
				</button>
			</div>
			<!-- Modal body -->
			<div class="p-6 space-y-6">
				<form id="addJetForm">
					<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
						<!-- Jet Name -->
						<div>
							<label
								for="jetName"
								class="block text-sm font-medium text-gray-900 dark:text-gray-200"
							>
								Jet Name
							</label>
							<input
								type="text"
								id="jetName"
								name="jetName"
								class="block w-full px-4 py-2 mt-1 text-sm text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
								required
							/>
						</div>

						<!-- Capacity -->
						<div>
							<label
								for="capacity"
								class="block text-sm font-medium text-gray-900 dark:text-gray-200"
							>
								Capacity
							</label>
							<input
								type="number"
								id="capacity"
								name="capacity"
								class="block w-full px-4 py-2 mt-1 text-sm text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
								required
							/>
						</div>

						<!-- Flight Range -->
						<div>
							<label
								for="flightRange"
								class="block text-sm font-medium text-gray-900 dark:text-gray-200"
							>
								Flight Range (km)
							</label>
							<input
								type="number"
								id="flightRange"
								name="flightRange"
								class="block w-full px-4 py-2 mt-1 text-sm text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
								required
							/>
						</div>

						<!-- Speed -->
						<div>
							<label
								for="speed"
								class="block text-sm font-medium text-gray-900 dark:text-gray-200"
							>
								Speed (km/h)
							</label>
							<input
								type="number"
								id="speed"
								name="speed"
								class="block w-full px-4 py-2 mt-1 text-sm text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
								required
							/>
						</div>

						<!-- Price -->
						<div>
							<label
								for="price"
								class="block text-sm font-medium text-gray-900 dark:text-gray-200"
							>
								Price (USD)
							</label>
							<input
								type="text"
								id="price"
								name="price"
								class="block w-full px-4 py-2 mt-1 text-sm text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
								required
							/>
						</div>

						<!-- Size -->
						<div>
							<label
								for="size"
								class="block text-sm font-medium text-gray-900 dark:text-gray-200"
							>
								Size
							</label>
							<input
								type="text"
								id="size"
								name="size"
								class="block w-full px-4 py-2 mt-1 text-sm text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
								required
							/>
						</div>
					</div>
				</form>
				<!-- Success message -->
				<div
					id="successMessage"
					class="hidden p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800"
					role="alert"
				>
					Jet successfully added!
				</div>
			</div>
			<!-- Modal footer -->
			<div
				class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600"
			>
				<button
					id="submitJet"
					type="submit"
					class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
				>
					Add Jet
				</button>
				<button
					data-modal-hide="addJetModal"
					type="button"
					class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600"
				>
					Cancel
				</button>
			</div>
		</div>
	</div>
</div>

<script>
	import { Modal } from "flowbite"

	// select elements
	const $addJetButton = document.querySelector("#addJetButton")
	const $addJetModal = document.querySelector("#addJetModal")
	const $submitJet = document.querySelector("#submitJet")

	// create a new modal instance
	const addJetModal = new Modal($addJetModal as HTMLElement)

	// open modal on button click
	if ($addJetButton) {
		$addJetButton.addEventListener("click", () => {
			addJetModal.toggle()
		})
	}

	// Form validation and submission logic
	if ($submitJet) {
		$submitJet.addEventListener("click", (event) => {
			event.preventDefault()

			const formElement = document.querySelector(
				"#addJetForm"
			) as HTMLFormElement | null
			if (formElement) {
				const formData = new FormData(formElement)
				const entries = Object.fromEntries(formData.entries())
				let isValid = true

				// validation
				for (const [key, value] of Object.entries(entries)) {
					if (!value) {
						alert(`${key} is required`)
						isValid = false
						break
					}
				}
			}
		})
	}
</script>
